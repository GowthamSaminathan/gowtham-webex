---

- function: snmp_sys_uptime
  querys:
  - Q: {result: {$ne:success}}
    score: 0
  - Q: {result:success,uptime: {$lt:86400}}
    score: 10
  - Q: {result:success,uptime: {$gt:86400}}
    score: 100
  host: all

- function: cisco_switch
  querys:
  - Q: {interface: {$ne:up}}
    score: 0
  - Q: {interface: up}
    score: 100
  - Q: {duplex: Half}
    score: 10
  - Q: {duplex: "100mb/s"}
    score: 10
  - Q: {output drops: {$gt:0}}
    score: 20
  - Q: {input error: {$gt:0}}
    score: 20
  - Q: {crc: {$gt:0}}
    score: 20
  host: all

- function: nexus_sw_int
  querys:
  - Q: {interface: {$ne:up}}
    score: 0
  - Q: {interface: up}
    score: 100
  - Q: {duplex: Half}
    score: 10
  - Q: {duplex: "100mb/s"}
    score: 10
  - Q: {output drops: {$gt:0}}
    score: 20
  - Q: {input error: {$gt:0}}
    score: 20
  - Q: {crc: {$gt:0}}
    score: 20
  host: all

- function: self_check
  querys:
   - Q: {ssh: {$ne: reachable}}
     score: 0
   - Q: {ssh: reachable}
     score: 100
  host: all

- function: raw
  querys:
  - Q: {result: success}
    score: 100
  - Q: {result: {$ne:success}}
    score: 0